    .issuesheader{
        color:#779C7E;
        font-size: 24px;
        margin-bottom: 0px;
        margin-left: 20px;
    }

    .LicencesContainerScroll{
        overflow-y: scroll;
        height: 93%;
        padding: 0;
        margin: 0;
        -webkit-mask-image: linear-gradient(
        to bottom,
        black 90%,
        transparent 100%
        );
        mask-image: linear-gradient(to bottom, black 90%, transparent 100%);
    }

    .Licenses h1 {
        margin: 5px;
    }
</style>

