<script>

let details = document.getElementsByClassName('Arrow')

for (var i = 0; i < details.length; ++i){
    details[i].addEventListener('click', function(event){
        var hid = event.target.parentElement.parentElement.parentElement.children[5].hidden;
        event.target.parentElement.parentElement.parentElement.children[5].hidden = !hid;
        if (event.target.className == "fa-solid fa-angle-right"){
            event.target.className = "fa-solid fa-angle-down";
        } else {
            event.target.className = "fa-solid fa-angle-right";
        }
})
}

</script>
