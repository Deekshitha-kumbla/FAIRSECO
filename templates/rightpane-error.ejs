<% 
    // When an error is thrown in a EJS template, EJS catches it and throws a new error with more information.
    // This function retrieves original error message from the last line. 
    function getError(error) {
        const text = error?.message;
        if (typeof(text) !== "string") {
            text = "Unknown error";
        }

        const lines = String(text).split('\n');
        return lines[lines.length - 1];
    }
%> 

<div class="RightPaneError <%- classes %>"<%if (hidden) {%> hidden<%}%>>
    Error: <%- getError(error) %>
</div>